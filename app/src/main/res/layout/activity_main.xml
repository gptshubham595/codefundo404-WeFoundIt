<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:text="Total Family Members :"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:id="@+id/fam"
        android:visibility="gone"
        android:text="0"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/lin"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:text="VOTING DAY "
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:id="@+id/day"
            android:text="XX "
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:text="/"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:id="@+id/month"
            android:text="XX"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:text="/"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:id="@+id/year"
            android:text="XXXX"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:text="COUNTDOWN FOR THE FINAL VOTING DAY:"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/dayleft"
            android:text="XX"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text=":"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/hourleft"
            android:text="XX"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text=":"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/minleft"
            android:text="XX"
            android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=":"
                android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/secleft"
            android:text="XX"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:id="@+id/addfam"
        android:layout_below="@id/lin"
        android:text="Add Family Members"
        android:backgroundTint="@android:color/holo_green_dark"
        android:drawableRight="@drawable/ic_add_box_black_24dp"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/addfam"
        android:id="@+id/recycler"
        android:layout_margin="20dp"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>