<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#21D528"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:selectableItemBackground">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:src="@android:drawable/picture_frame"
        android:id="@+id/familymemberimage"
        android:layout_height="130dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textStyle="bold"
            android:textColor="#3c3c44"
            android:textSize="15sp"
            android:id="@+id/famname"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhaar   :  "
                android:textStyle="bold"
                android:textColor="#3c3c44"
                android:textSize="15sp" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXXXX"
            android:textStyle="bold"
            android:textColor="#3c3c44"
            android:textSize="15sp"
            android:id="@+id/aadhaar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB          :  "
                android:textStyle="bold"
                android:textColor="#3c3c44"
                android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX/XX/XXXX"
            android:textStyle="bold"
            android:textColor="#3c3c44"
            android:textSize="15sp"
            android:id="@+id/dob"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIGIBLE  :  "
            android:textStyle="bold"
            android:textColor="#3c3c44"
            android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textStyle="bold"
                android:textColor="#3c3c44"
                android:textSize="15sp"
                android:id="@+id/eligible"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER  :  "
                android:textStyle="bold"
                android:textColor="#3c3c44"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX"
                android:textStyle="bold"
                android:textColor="#3c3c44"
                android:textSize="15sp"
                android:id="@+id/gender"/>

        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_margin="5dp"
            android:id="@+id/tick"
            android:visibility="gone"
            android:src="@drawable/done"
            android:layout_height="100dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_margin="5dp"
            android:id="@+id/cross"
            android:visibility="gone"
            android:src="@drawable/ic_cancel_red_24dp"
            android:layout_height="100dp" />
    </LinearLayout>
</LinearLayout>